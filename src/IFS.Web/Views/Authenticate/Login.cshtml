@model LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

@if (!ViewData.ModelState.IsValid) {
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}

<form class="form-horizontal" asp-action="Login" asp-antiforgery="true">
    <input type="hidden" asp-for="ReturnUrl"/>

    <div class="form-group">
        <label asp-for="Passphrase" class="control-label col-sm-2"></label>
        
        <div class="col-sm-10">
            <input asp-for="Passphrase" type="password" class="form-control" />
        </div>
    </div>
    
    <div class="form-group">
        <p class="col-sm-10 col-sm-offset-2">
            <button class="btn btn-primary">Log in</button>
        </p>
    </div>
</form>