@model LoginModel

@{
    ViewBag.Title = "Administrative console login";
}

<h2>Internet File System <small>@ViewBag.Title</small></h2>

<p>
    Please enter your credentials to continue.
</p>

@if (!ViewData.ModelState.IsValid) {
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}

<form asp-action="Login" asp-antiforgery="true">
    <input type="hidden" asp-for="ReturnUrl"/>
    
    <div class="form-group">
        <input asp-for="UserName" placeholder-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Password" placeholder-for="Password" class="form-control" />
    </div>
    
    <div class="form-group">
        <button class="btn btn-primary">Continue</button>
    </div>
</form>